{
  "name": "Jira Comment Visibility",
  "version": "0.1.0",
  "description": "Acts as a default comment visibility setting for Jira. Only works for our company internal instance for now",
  "homepage_url": "https://github.com/Tim-Koertgen/jira-comment-visibility",
  "manifest_version": 2,
  "minimum_chrome_version": "88",
  "browser_specific_settings": {
	"gecko": {
	  "id": "tim.koertgen@outlook.de",
	  "strict_min_version": "67.0"
	}
  },
  "browser_action": {
	"default_popup": "../popup/popup.html"
  },
  "icons": {
	"128": "../icon.png"
  },
  "permissions": [
	"storage",
	"activeTab",
	"scripting"
  ],
  "content_scripts": [
	{
	  "matches": [
		"https://*.atlassian.net/browse/*"
	  ],
	  "js": [
		"../content.js"
	  ],
	  "css": [
		"../content.css"
	  ],
	  "run_at": "document_idle"
	}
  ],
  "background": {
	"persistent": false,
	"scripts": [
	  "../background.js"
	]
  },
  "web_accessible_resources": [
	"../content/background-simulation/index.html"
  ]
}
